
{
    "cuda": true,
    "database": {
        "name": "Remote",
        "base_path": "F:/Remote Sensing/Data",
        "image_bands": 3
    },
    "output": {
        "results_path": "F:/Remote Sensing/Data/output"
    },
    "training": {
        "batch_size": 64,
        "epochs": 50,
        "learning_rate": 1e-4,
        "seed": 1,
        "train_data": {
            "normal": "F:/Remote Sensing/Data/Train/normal/4",
            "noise": "F:/Remote Sensing/Data/Train/noise/4"
        },
        "val_data": {
            "normal": "F:/Remote Sensing/Data/Validation/Train/normal/4",
            "noise": "F:/Remote Sensing/Data/Validation/Train/noise/4"
        }
    },
    "gpu": {
        "use_multi_gpu": false,
        "gpu_ids": [0],
        "num_threads": 12
    },
    "models": {
        "SFCSR": {
            "upscale_factor": 4,
            "n_feats": 32,
            "n_module": 3
        },
        "MCNet": {
            "upscale_factor": 4,
            "n_feats": 32,
            "n_conv": 1,
            "n_colors": 3
        },
        "Propuesto": {
        "upscale_factor": 4,
        "n_feats": 16,
        "n_module": 4,
        "n_conv": 1,  
        "cross_attention": {
            "query_key_reduction": 32
        },
        "denoising_block": {
            "kernel_size": 2,
            "activation": "ReLU"
        },
        "attention_block": {
            "kernel_size": 5,
            "reduction": 8
        },
        "n_colors": 3
    }

    },
    "model_list": ["SFCSR","MCNet","Propuesto"],
    "test": {
        "test_data": {
            "normal": "F:/Remote Sensing/Data/Test/Normal/4",
            "noise": "F:/Remote Sensing/Data/Test/Noise/4"
        }
    }
}